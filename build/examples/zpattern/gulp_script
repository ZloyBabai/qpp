#!/bin/bash

awk 'NR>2{print $1," core ",$2,$3,$4,"  0.0 1.0 0.0"}' coord.xyz > coord
cat head coord tail > tor.gin
gulp < tor.gin > tor.gout


grep 'lattice energy' tor.gout | grep eV | awk '{print $5}' > tor.dat

awk 'BEGIN{n=-1000; on=0;}/Final cartesian derivatives/{n=NR+6} NR==n{on=1;}
/------/{on=0} on {print $4, $5, $6}' tor.gout >> tor.dat

