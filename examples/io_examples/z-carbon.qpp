zpattern graphene1{
  search(C1=C, C2=C, C3=C);
  insert(C4=C);
  avoid(CX=C);
  rcc_min=1.25; rcc_max=1.55;
  rcc=1.4;
  bond(C1,C2, rcc_min, rcc_max);
  bond(C1,C3, rcc_min, rcc_max);
  angle alpha(C2, C1, C3, 105, 130);
  bond(C1,C4, rcc);
  angle(C3,C1,C4, 180-0.5*alpha);
  dihedral(C3,C1,C2,C4,-20,20);
  bond(C4,CX, 0, rcc_max);
}